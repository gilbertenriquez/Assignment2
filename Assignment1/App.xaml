<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Assignment1"
             x:Class="Assignment1.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#2A2A2A</Color>
            <Color x:Key="FrameColor_1">#1C1C1C</Color>
            <Color x:Key="FrameColor_2">#717171</Color>
            <Color x:Key="TextSoft">Gray</Color>
            <Color x:Key="TextColorBlack">#FFFFFF</Color>
            <Color x:Key="TextColorWhite">#FFFFFF</Color>
            <Color x:Key="ButtonColor">#8F00FF</Color>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
